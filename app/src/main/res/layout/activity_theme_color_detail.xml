<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.theme.themecolor.ThemeColorDetailActivity"
    android:background="#07000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/model"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="47dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:src="@drawable/image_theme_fill_bg" />

    <com.ruichaoqun.luckymusic.theme.ui.CustomThemeLine
        android:layout_width="fill_parent"
        android:layout_height="1dp" />
    <com.ruichaoqun.luckymusic.widget.SwipeDisableViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
</LinearLayout>