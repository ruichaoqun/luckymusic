<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.ruichaoqun.luckymusic.theme.ui.CustomThemeTextView
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:drawablePadding="7.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip"
                android:text="当前播放"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/textsize_large"
                android:textStyle="bold"/>
            <com.ruichaoqun.luckymusic.theme.ui.CustomThemeTextView
                android:id="@+id/tv_header_count"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:drawablePadding="7.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip"
                tools:text="(123)"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/textsize_middle"
                android:textStyle="bold"
                android:layout_gravity="bottom"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <com.ruichaoqun.luckymusic.theme.ui.CustomThemeTextView
                android:id="@+id/tv_play_mode"
                style="@style/TextViewMiddleStyle"
                android:layout_height="50.0dip"
                android:drawablePadding="7.0dip"
                android:gravity="center_vertical"
                tools:text="列表循环"
                android:paddingLeft="10.0dip" />
            <com.ruichaoqun.luckymusic.theme.ui.CustomThemeTextView
                android:id="@+id/tv_collect"
                style="@style/TextViewMiddleStyle"
                android:layout_height="50.0dip"
                android:drawablePadding="7.0dip"
                android:gravity="center_vertical"
                android:text="收藏全部"
                android:paddingLeft="10.0dip"
                android:paddingRight="10dp"
                android:layout_toLeftOf="@+id/iv_delete_all"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/a0f"/>
            <ImageView
                android:id="@+id/iv_delete_all"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/a0e"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

    <com.ruichaoqun.luckymusic.widget.BottomSheetDialog.BottomSheetRecyclerView
        android:id="@+id/rv_play_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>
</LinearLayout>