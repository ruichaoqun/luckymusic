<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:choiceMode="singleChoice"
    android:divider="@null"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/drawer_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/main_draw_footer_height">
        <FrameLayout
            android:id="@+id/drawer_header_content"
            android:layout_width="match_parent"
            android:layout_height="334.67dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="#D1CACC">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_avatar"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/black" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="163dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <ImageView
                        android:id="@+id/iv_head_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"/>
                    <com.ruichaoqun.luckymusic.theme.ui.CustomThemeTextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize_12sp"
                        android:textColor="@color/color_cc000000"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/iv_head_image"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:text="hello"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <com.ruichaoqun.luckymusic.theme.ui.CustomThemeRelativeLayout
                        android:id="@+id/click_my_message"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">
                        <com.ruichaoqun.luckymusic.theme.ui.CustomThemeIconImageView
                            android:id="@+id/iv_my_message"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            app:srcCompat="@drawable/vector_drawer_my_message"
                            android:layout_marginTop="8dp"
                            android:layout_centerHorizontal="true"/>
                        <com.ruichaoqun.luckymusic.theme.ui.CustomThemeTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/drawer_my_message"
                            android:id="@+id/tv_my_message"
                            android:layout_below="@+id/iv_my_message"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:textSize="@dimen/textsize_11sp"
                            android:textColor="@color/color_cc000000"/>
                    </com.ruichaoqun.luckymusic.theme.ui.CustomThemeRelativeLayout>

                    <com.ruichaoqun.luckymusic.theme.ui.CustomThemeRelativeLayout
                        android:id="@+id/click_my_friends"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">
                        <com.ruichaoqun.luckymusic.theme.ui.CustomThemeIconImageView
                            android:id="@+id/iv_my_friends"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            app:srcCompat="@drawable/vector_drawer_my_friends"
                            android:layout_marginTop="8dp"
                            android:layout_centerHorizontal="true"/>
                        <com.ruichaoqun.luckymusic.theme.ui.CustomThemeTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/drawer_my_friends"
                            android:id="@+id/tv_my_friends"
                            android:layout_below="@+id/iv_my_friends"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:textSize="@dimen/textsize_11sp"
                            android:textColor="@color/color_cc000000"/>
                    </com.ruichaoqun.luckymusic.theme.ui.CustomThemeRelativeLayout>

                    <com.ruichaoqun.luckymusic.theme.ui.CustomThemeRelativeLayout
                        android:id="@+id/click_homepage"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">
                        <com.ruichaoqun.luckymusic.theme.ui.CustomThemeIconImageView
                            android:id="@+id/iv_my_homepage"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            app:srcCompat="@drawable/vector_drawer_homepage"
                            android:layout_marginTop="8dp"
                            android:layout_centerHorizontal="true"/>
                        <com.ruichaoqun.luckymusic.theme.ui.CustomThemeTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/drawer_my_person_homepage"
                            android:id="@+id/tv_my_homepage"
                            android:layout_below="@+id/iv_my_homepage"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:textSize="@dimen/textsize_11sp"
                            android:textColor="@color/color_cc000000"/>
                    </com.ruichaoqun.luckymusic.theme.ui.CustomThemeRelativeLayout>

                    <com.ruichaoqun.luckymusic.theme.ui.CustomThemeRelativeLayout
                        android:id="@+id/click_my_theme"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">
                        <com.ruichaoqun.luckymusic.theme.ui.CustomThemeIconImageView
                            android:id="@+id/iv_my_theme"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            app:srcCompat="@drawable/vector_drawer_theme"
                            android:layout_marginTop="8dp"
                            android:layout_centerHorizontal="true"/>
                        <com.ruichaoqun.luckymusic.theme.ui.CustomThemeTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/drawer_my_theme"
                            android:id="@+id/tv_my_theme"
                            android:layout_below="@+id/iv_my_theme"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:textSize="@dimen/textsize_11sp"
                            android:textColor="@color/color_cc000000"/>
                    </com.ruichaoqun.luckymusic.theme.ui.CustomThemeRelativeLayout>


                </LinearLayout>

            </LinearLayout>
        </FrameLayout>


    </LinearLayout>
</ScrollView>