<?xml version="1.0" encoding="utf-8"?>
<com.ruichaoqun.luckymusic.theme.ui.CustomTopLineLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="46dp"
    android:orientation="horizontal"
    android:paddingLeft="10.0dip">

    <ImageView
        android:id="@+id/iv_currentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6.0dip"
        android:scaleType="center"
        android:src="@drawable/ic_voice" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="5.0dip"
        android:orientation="horizontal"
        android:layout_weight="1.0">

        <com.ruichaoqun.luckymusic.theme.ui.CustomThemeTextView
            android:id="@+id/tv_name"
            style="@style/TextViewMiddleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <com.ruichaoqun.luckymusic.theme.ui.CustomThemeTextView
            android:id="@+id/tv_author"
            style="@style/TextViewMiddleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/textsize_small" />
    </LinearLayout>

    <com.ruichaoqun.luckymusic.theme.ui.CustomThemeIconImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="5.0dip"
        android:paddingBottom="10.0dip"
        android:scaleType="center"
        android:src="@drawable/ic_close"
        app:normalDrawableColor="@color/color_cc000000"/>
</com.ruichaoqun.luckymusic.theme.ui.CustomTopLineLinearLayout>