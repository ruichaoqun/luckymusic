<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/ripple_select"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="125dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/iv_close"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#555"
            android:maxLines="1"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/iv_close"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/tv_title"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="8dp"
            android:background="@drawable/ripple_select"
            android:src="@mipmap/ic_notification_close"
            android:scaleType="center"
            android:layout_alignParentRight="true" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#AAA"
            android:layout_below="@+id/tv_hint"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp">
            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:background="@drawable/ripple_select"/>
            <ImageView
                android:id="@+id/iv_pre"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_notification_pre"
                android:background="@drawable/ripple_select"/>
            <ImageView
                android:id="@+id/iv_playback"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:background="@drawable/ripple_select"/>
            <ImageView
                android:id="@+id/iv_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@mipmap/ic_notification_next"
                android:background="@drawable/ripple_select"/>
            <TextView
                android:id="@+id/tv_lyric"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="词"
                android:gravity="center"
                android:textColor="#555"
                android:textSize="16sp"
                android:background="@drawable/ripple_select"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>