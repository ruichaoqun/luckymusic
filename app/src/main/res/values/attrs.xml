<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CMRoundedCorner">
        <attr name="cmRoundedCorner" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CustomThemeContainer">
        <attr name="forCard" format="boolean"/>
        <attr name="newBgPaddingLeft" format="dimension"/>
        <attr name="bgType" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomTheme">
        <attr name="drawableLeftCompat" format="reference"/>
        <attr name="drawableRightCompat" format="reference"/>
        <attr name="buttonDrawableWithoutTheme" format="boolean"/>
        <attr name="needSelected" format="boolean"/>
        <attr name="needBackground" format="boolean"/>
        <attr name="needThemeRedShader" format="boolean"/>
        <attr name="buttonWhiteBackground" format="boolean"/>
        <attr name="roundedCornerRadius" format="float"/>
        <attr name="buttonType" format="integer"/>
        <!--图片颜色是否适配主题  用于TextView、Button、ImageView-->
        <attr name="needApplyDrawableColor" format="boolean"/>


    </declare-styleable>
</resources>