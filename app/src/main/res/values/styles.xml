<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">56dp</item>
    </style>

    <style name="dr">

    </style>

    <style name="SplashStyle" parent="@style/AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/image_splash</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NotificationText" parent="@android:style/TextAppearance.StatusBar.EventContent" />
    <style name="NotificationTitle" parent="@android:style/TextAppearance.StatusBar.EventContent.Title" />

    <style name="notificationButton">
        <item name="android:background">@drawable/common_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">46.69998dip</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="largeNotificationButton">
        <item name="android:background">@drawable/common_selector</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">1.3299866dip</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_weight">1.0</item>
    </style>


    <style name="f1" />
    <style name="f2" parent="@style/f1">
        <item name="android:windowEnterAnimation">@anim/anim_show_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_hide_to_bottom</item>
    </style>

    <style name="f3" >
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:textColorPrimary">#dd000000</item>
        <item name="android:textColorSecondary">#dd000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@null</item>
        <item name="android:textColorHint">#42000000</item>
        <item name="android:windowAnimationStyle">@style/f2</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:backgroundDimEnabled">true</item>
<!--        <item name="gt">@android:color/background_light</item>-->
<!--        <item name="gu">@style/f_</item>-->
<!--        <item name="gv">@color/b9</item>-->
<!--        <item name="gw">@style/gk</item>-->
<!--        <item name="gx">@style/gj</item>-->
<!--        <item name="gy">@style/gn</item>-->
<!--        <item name="gz">@style/gl</item>-->
    </style>

    <style name="TextViewMiddleStyle" parent="@style/BaseSingleTextViewStyle">
        <item name="android:textSize">@dimen/textsize_15sp</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>
    <style name="BaseSingleTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tp">
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="tu" parent="@style/tp">
        <item name="android:shadowColor">#80ffffff</item>
    </style>

    <style name="ud" parent="@style/tu">
        <item name="android:textSize">8.0sp</item>
        <item name="android:textColor">#5cffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">66.0dip</item>
    </style>

    <style name="DialogActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowMinWidthMajor">65.0%</item>
        <item name="android:windowMinWidthMinor">91.0%</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowElevation">@dimen/dp_16</item>
    </style>

    <style name="Toolbar_Main_TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>



</resources>
