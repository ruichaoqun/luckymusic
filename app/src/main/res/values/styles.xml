<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">56dp</item>
    </style>

    <style name="dr">

    </style>

    <style name="SplashStyle" parent="@style/AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/image_splash</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NotificationText" parent="@android:style/TextAppearance.StatusBar.EventContent" />
    <style name="NotificationTitle" parent="@android:style/TextAppearance.StatusBar.EventContent.Title" />

    <style name="notificationButton">
        <item name="android:background">@drawable/common_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">46.69998dip</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="largeNotificationButton">
        <item name="android:background">@drawable/common_selector</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">1.3299866dip</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_weight">1.0</item>
    </style>
</resources>
